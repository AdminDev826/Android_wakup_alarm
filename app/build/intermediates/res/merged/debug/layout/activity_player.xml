<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="app.tabsample.Player"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:layout_weight="1.02">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/musicImage"
            android:adjustViewBounds="true"
            android:soundEffectsEnabled="false" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#cdcdcd"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="1"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/txtSeekPlayTime"
                android:text="00:00"
                android:textColor="#4f4f4f" />

            <SeekBar
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="06:32"
                android:id="@+id/txtSeekEndTime"
                android:layout_marginLeft="10dp"
                android:textColor="#4f4f4f" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Track with background music"
            android:id="@+id/textView5"
            android:gravity="center_horizontal"
            android:textColor="#333333" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Barry Zecca"
            android:id="@+id/textView3"
            android:gravity="center_horizontal"
            android:textColor="#4f4f4f" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal">

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="|&lt;"
                android:id="@+id/btPv" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="&lt;&lt;"
                android:id="@+id/btFB" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="||"
                android:id="@+id/btPlay" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text=">>"
                android:id="@+id/btFF" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text=">|"
                android:id="@+id/btNxt" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgSlow"
                android:src="@drawable/music_slow" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgPlay"
                android:src="@drawable/music_play"
                android:layout_marginLeft="30dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgStop"
                android:src="@drawable/music_stop"
                android:layout_marginLeft="30dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
